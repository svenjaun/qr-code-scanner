<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="dev.jaun.qr_code_scanner.Fragments.EditFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="match_parent"
        android:padding="20dp">
        <!-- TODO: Update blank fragment layout -->
        <EditText
            android:id="@+id/edit_fragment_code_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Code Name"
            android:maxLines="1"
            android:inputType="text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="22dp"/>
        <TextView
            android:id="@+id/edit_fragment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"

            android:layout_marginTop="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_fragment_code_name"
            />
        <TextView
            android:id="@+id/edit_fragment_code_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_fragment_date"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Speichern"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/edit_fragment_cancel"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/edit_fragment_save"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Abbrechen"
            app:layout_constraintRight_toLeftOf="@id/edit_fragment_save"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/edit_fragment_cancel"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>